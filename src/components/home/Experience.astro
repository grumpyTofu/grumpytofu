---

<Section id="experience" variant="frosted" class="pt-14 px-6 md:px-12">
  <Typography variant="h2" class="!font-medium leading-normal text-center">Work Experience</Typography>
  <div class="w-full pt-14 pb-[6rem]">
    <Timeline>
      {
        experience.map((item) => (
          <TimelineItem
            date={item.date}
            company={item.company}
            title={item.title}
            details={item.details}
          />
        ))
      }
    </Timeline>
  </div>
</Section>
