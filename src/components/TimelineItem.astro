---
interface Props {
  company: string;
  title: string;
  date: string;
  details: string[];
}

const { company, date, title, details } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
  >
  </div>
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
    {title}
  </h3>
  <span class="mb-1 mr-1 text-sm leading-none text-gray-400 dark:text-gray-400 font-bold">{company}</span>
  <time class="mb-1 text-sm italic font-normal leading-none text-gray-400 dark:text-gray-500">{date}</time>
  <ol>
    {details.map((detail) => (
      <li class="list-disc list-inside mb-2 text-base font-normal text-gray-500 dark:text-gray-400">
        {detail}
      </li>
    ))}
  </ol>
</li>
