---
import { Card } from '../components';
import { ContactForm, ToastContainer } from '../components';
import Section from '../components/Section.astro';
import Layout from '../layouts/Layout.astro';

const grecaptchaKeyId = import.meta.env.PUBLIC_GRECAPTCHA_KEY_ID;
---

<Layout>
  <Section id="contact" class="justify-center">
    <Card class="!bg-slate-800 my-10 mx-auto py-12 px-8 max-w-4xl">
      <ContactForm client:only="solid-js" />
    </Card>
  </Section>
  <ToastContainer client:only="solid-js" />
</Layout>

<script is:inline src=`https://www.google.com/recaptcha/enterprise.js?render=${grecaptchaKeyId}`
></script>
